{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Electron: Main",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "args": [
                "${workspaceFolder}/dist/main.js"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
                "${workspaceFolder}/dist/**/*.map"
            ],
            "sourceMaps": true,
            "preLaunchTask": "npm: build",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}